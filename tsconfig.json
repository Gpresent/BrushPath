{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "types": [
      "vitest/importMeta"
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve"
  },
  "include": [
    "src",
    "src/tests/jsdom-extended.js",
    "src/utils/FirebaseQueries.tsx",
    "src/tests/jest.config.ts",
    "src/tests/FirebaseQueries.test.tsx",
    "src/tests/setupTests.ts",
    "src/tests/jest.setup.ts"
  ]
}